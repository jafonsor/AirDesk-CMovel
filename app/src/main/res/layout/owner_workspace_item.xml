<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/workspace_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/delete_workspace_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minHeight="0dp" android:minWidth="0dp"
            android:text="@string/delete"/>

        <Button
            android:id="@+id/workspace_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minHeight="0dp" android:minWidth="0dp"
            android:text="@string/settings"/>

        <Button
            android:id="@+id/edit_access_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minHeight="0dp" android:minWidth="0dp"
            android:text="@string/edit_access_list"/>
    </LinearLayout>

</RelativeLayout>