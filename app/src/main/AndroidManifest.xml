<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ulisboa.tecnico.cmov.g15.airdesk" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".AirDesk">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.WorkspaceListActivity"
            android:label="@string/title_activity_workspace_list"
            android:parentActivityName=".view.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
        <activity
            android:name=".view.EditFileActivity"
            android:label="@string/title_activity_edit_file"
            android:parentActivityName=".view.WorkspaceListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.WorkspaceListActivity" />
        </activity>
    </application>

</manifest>
